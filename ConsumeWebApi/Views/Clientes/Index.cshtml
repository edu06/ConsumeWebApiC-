            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Primer_Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Segundo_Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)


            </td>

            <td>

                @Html.ActionLink("Modificar", "Edit", new { id = item.Codigo_Cliente }) |
                @Html.ActionLink("Ver", "Details", new { id = item.Codigo_Cliente }) |
