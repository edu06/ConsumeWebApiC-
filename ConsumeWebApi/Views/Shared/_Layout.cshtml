<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SkyNet", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Gestion de Incidencias", "Index", "Incidencias")</li>
                    <li>@Html.ActionLink("Gestion de Clientes", "Index", "Clientes")</li>
                    <li>@Html.ActionLink("Gestion de Tecnicos", "Index", "Tecnico_Soporte")</li>
                    <li>@Html.ActionLink("Gestion de DeptoTecnico", "Index", "Departamento_Tecnico")</li>
                    <li>@Html.ActionLink("Gestion de Estados", "Index", "Estados")</li>
                    <li>@Html.ActionLink("Gestion de Perfiles", "Index", "Perfiles")</li>
                    <li>@Html.ActionLink("Gestion de Receptores", "Index", "Receptor_Solicitudes")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
<ul class="nav navbar-nav">
    <p>&copy;@DateTime.Now.Year By Oscar Eduardo Chopen </p>
</ul>

</html>
